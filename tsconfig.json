{
    "compilerOptions": {
      "module": "CommonJS",
      "esModuleInterop": true,
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "rootDir": "."
    },
    "include": [
      "app.ts",
      "controllers/**/*.ts",
      "repository/**/*.ts",
      "routes/**/*.ts",
      "services/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }
  